/css/*      /css/:splat     200
/images/*   /images/:splat  200
/assets/*   /assets/:splat  200

# API routes (if any local functions)
/api/*  /api/:splat  200

# Redirect all other routes to index.html for SPA routing
/*    /index.html   200

